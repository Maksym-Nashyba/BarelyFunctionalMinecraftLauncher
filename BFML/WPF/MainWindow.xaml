<Window
    x:Class="BFML.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:glWpfControl="clr-namespace:OpenTK.Wpf;assembly=GLWpfControl"
    xmlns:local="clr-namespace:ToggleClass"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="1200"
    Height="700"
    AllowsTransparency="True"
    Background="Transparent"
    MouseDown="MoveWindow"
    ResizeMode="NoResize"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.Resources />

    <Border Background="#383838" CornerRadius="8">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400" />
                <ColumnDefinition Width="400" />
                <ColumnDefinition Width="400" />
            </Grid.ColumnDefinitions>

            <glWpfControl:GLWpfControl 
                x:Name="OpenTkControl" 
                Render="SkinPreviewOnRender"
                Grid.Column="0"
                Height="550"
                Width="350"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"/>
            
            <StackPanel Width="365" Margin="30,11,5,620">

                <Rectangle
                    Width="311"
                    Height="37"
                    HorizontalAlignment="Left"
                    Fill="#454545"
                    RadiusX="3"
                    RadiusY="3" />
                <TextBlock
                    x:Name="NicknameText"
                    Width="331"
                    Height="26"
                    Margin="0,-36,8,0"
                    FontFamily="Minecraft"
                    FontSize="18"
                    Foreground="#dcdcdc"
                    Text="PASASI" />
                <Rectangle
                    Width="311"
                    Height="3"
                    Margin="0,-3,0,0"
                    HorizontalAlignment="Left"
                    Fill="#ff9a3c"
                    RadiusX="0.5"
                    RadiusY="0.5"
                    Style="{DynamicResource GlowingRectangle}" />
                <Button
                    Width="42"
                    Height="37"
                    Margin="312,-36,0,0"
                    Background="#383838"
                    Cursor="Hand"
                    Style="{DynamicResource Transparent}"
                    Click="ExitAccount"/>
                <Image
                    Width="36"
                    Height="33"
                    Margin="316,-37,0,0"
                    IsHitTestVisible="False"
                    Source="Images/LogOutIcon.png" />

            </StackPanel>
            
            <Button
                Width="311"
                Height="516"
                Margin="30,98,59,85"
                AllowDrop="True"
                Opacity="0"
                Background="#383838"
                Drop="OnSkinFileDrop"
                Style="{DynamicResource Transparent2}" />
            
            <StackPanel
                Width="220"
                Height="160"
                Margin="0,0,29,250"
                IsHitTestVisible="False">
                
                <TextBlock
                    HorizontalAlignment="Center"
                    FontFamily="Minecraft"
                    FontSize="26"
                    Foreground="#7d7d7d"
                    Margin="10,0,0,0"
                    Opacity="0.5"
                    Text="Drop Skin" />
                <Image
                    Width="33"
                    Height="46"
                    Opacity="0.5"
                    Margin="10,10,0,0"
                    Source="/WPF/Images/PixelArrow.png" />
                
            </StackPanel>
            
            <Rectangle
                Grid.Row="0"
                Grid.Column="1"
                Width="400"
                Height="672"
                Fill="#434343"
                RadiusX="4"
                RadiusY="4" />

            <TextBlock
                Grid.Row="0"
                Grid.Column="2"
                Height="40"
                Margin="32,14,-32,646"
                FontFamily="Minecraft"
                FontSize="30"
                Foreground="#dcdcdc"
                Text="Changelog" />

            <Rectangle
                Grid.Row="0"
                Grid.Column="2"
                Width="328"
                Height="3"
                Margin="32,59,40,638"
                Fill="#dcdcdc"
                RadiusX="1"
                RadiusY="1" />

            <Rectangle
                Grid.Row="0"
                Grid.Column="2"
                Width="304"
                Height="564"
                Margin="32,98,64,38"
                Fill="#434343"
                RadiusX="4"
                RadiusY="4" />
            <Rectangle
                Grid.Column="2"
                Width="9"
                Height="564"
                Margin="352,98,37,38"
                Fill="#595959"
                RadiusX="2"
                RadiusY="2" />
            <ScrollViewer
                Grid.Column="2"
                Margin="32,98,34,38"
                Style="{DynamicResource Scroll}">
                <Grid Height="5000">
                    <TextBlock
                        x:Name="ChangeLog"
                        Margin="10,10,23,0"
                        FontFamily="Minecraft"
                        FontSize="18"
                        Foreground="#dcdcdc"
                        Text="Alif-Lam-Ra. Dies ist ein Buch, das Wir zu dir hinabgesandt haben, damit du die Menschen mit der Erlaubnis ihres Herrn aus den Finsternissen hinaus ins Licht bringst, auf den Weg des Allmächtigen und Lobenswürdigen, Aliflamra kitabun anzalnahu ilayka litukhrija annasa mina aththulumati ila annoori biithni rabbihim ila sirati alAAazeezi alhameed (den Weg) Allahs, Dessen ist, was in den Himmeln und was auf der Erde. Und wehe den Ungläubigen vor einer strengen Strafe! Allahi allathee lahu ma fee assamawati wama fee alardi wawaylun lilkafireena min AAathabin shadeed Diejenigen, die das diesseitige Leben mehr lieben als das Jenseits und von Allahs Weg abhalten und danach trachten, ihn krumm zu machen; sie befinden sich in weit(reichend)em Irrtum. Allatheena yastahibboona alhayata addunya AAala alakhirati wayasuddoona AAan sabeeli Allahi wayabghoonaha AAiwajan olaika fee dalalin baAAeed Und Wir haben keinen Gesandten gesandt, außer in der Sprache seines Volkes, damit er ihnen (die Botschaft) klar macht. Allah läßt dann in die Irre gehen, wen Er will, und leitet recht, wen Er will. Und Er ist der Allmächtige und Allweise. Wama arsalna min rasoolin illa bilisani qawmihi liyubayyina lahum fayudillu Allahu man yashao wayahdee man yashao wahuwa alAAazeezu alhakeem Und Wir sandten ja bereits Musa mit Unseren Zeichen: Bringe dein Volk aus den Finsternissen hinaus ins Licht, und erinnere sie an die Tage Allahs. Darin sind wahrlich Zeichen für jeden sehr Standhaften und sehr Dankbaren. Walaqad arsalna moosa biayatina an akhrij qawmaka mina aththulumati ila annoori wathakkirhum biayyami Allahi inna fee thalika laayatin likulli sabbarin shakoor وَمَآ أَرۡسَلۡنَا مِن رَّسُولٍ إِلَّا بِلِسَانِ قَوۡمِهِۦ لِيُبَيِّنَ لَهُمۡۖ فَيُضِلُّ ٱللَّهُ مَن يَشَآءُ وَيَهۡدِي مَن يَشَآءُۚ وَهُوَ ٱلۡعَزِيزُ ٱلۡحَكِي"
                        TextWrapping="Wrap" />

                </Grid>
            </ScrollViewer>

            <Rectangle
                Grid.Row="0"
                Grid.Column="1"
                Width="300"
                Height="284"
                Margin="50,30,50,386"
                Fill="#383838"
                RadiusX="4"
                RadiusY="4" />

            <TextBlock
                Grid.Column="1"
                Width="70"
                Margin="65,-6,265,354"
                FontFamily="Minecraft"
                FontSize="60"
                Foreground="#ff9a3c"
                LineHeight="60"
                LineStackingStrategy="BlockLineHeight"
                Style="{DynamicResource GlowText}"
                Text=" BFML"
                TextAlignment="Center"
                TextWrapping="Wrap" />

            <TextBlock
                Grid.Column="1"
                Width="210"
                Height="240"
                Margin="125,67,68,393"
                FontFamily="Minecraft"
                FontSize="36"
                Foreground="#dcdcdc"
                LineHeight="60"
                Text="arely unctional inecraft auncher"
                TextWrapping="Wrap" />

            <Rectangle
                Grid.Row="0"
                Grid.Column="1"
                Width="360"
                Margin="20,332,20,269"
                Fill="#383838"
                RadiusX="4"
                RadiusY="4" />

            <StackPanel Grid.Row="0" Grid.Column="1">
                <Slider
                    x:Name="RamSlider"
                    Grid.Row="0"
                    Grid.Column="1"
                    Height="24"
                    Margin="32,398,31,278"
                    AutoToolTipPlacement="TopLeft"
                    Cursor="Hand"
                    IsSnapToTickEnabled="True"
                    Maximum="16384"
                    Style="{DynamicResource Horizontal_Slider}"
                    Template="{DynamicResource Slider}"
                    TickFrequency="512">
                    <Slider.Resources>
                        <Style TargetType="ToolTip">
                            <Setter Property="OverridesDefaultStyle" Value="True" />
                            <Setter Property="SnapsToDevicePixels" Value="True" />
                            <Setter Property="Foreground" Value="#dcdcdc" />
                            <Setter Property="FontFamily" Value="Minecraft" />
                            <Setter Property="FontSize" Value="15" />
                            <Setter Property="Margin" Value="0,-4,0,0" />

                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ToolTip">
                                        <ContentPresenter />
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Slider.Resources>
                </Slider>
                <Rectangle
                    Width="100"
                    Height="34"
                    Margin="171,-685,0,0"
                    Fill="#595959"
                    RadiusX="3"
                    RadiusY="3" />
                <Rectangle
                    Width="100"
                    Height="3"
                    Margin="171,-654,0,0"
                    Fill="#ff9a3c"
                    RadiusX="1"
                    RadiusY="1"
                    Style="{DynamicResource GlowingRectangle}" />
                <TextBlock
                    Width="100"
                    Height="30"
                    Margin="171,-685,0,0"
                    FontFamily="Minecraft"
                    FontSize="20"
                    Foreground="#dcdcdc"
                    Text="{Binding ElementName=RamSlider, Path=Value}"
                    TextAlignment="Center" />
                <TextBlock
                    Width="36"
                    Height="30"
                    Margin="316,-681,0,0"
                    FontFamily="Minecraft"
                    FontSize="20"
                    Foreground="#dcdcdc"
                    Text="MB"
                    TextAlignment="Center" />
            </StackPanel>

            <Slider
                x:Name="SkinSlider"
                Grid.Row="0"
                Grid.Column="0"
                Width="311"
                Height="24"
                Maximum="360"
                Margin="30,642,59,34"
                Style="{DynamicResource Horizontal_Slider}"
                Template="{DynamicResource Slider2}" />

            <TextBlock
                Grid.Row="0"
                Grid.Column="1"
                Height="35"
                Margin="33,339,0,326"
                FontFamily="Minecraft"
                FontSize="24"
                Foreground="#dcdcdc"
                Text="Allocated Ram" />

            <Rectangle
                Grid.Row="0"
                Grid.Column="1"
                Width="360"
                Height="45"
                Margin="20,443,20,212"
                Fill="#383838"
                RadiusX="4"
                RadiusY="4" />

            <TextBlock
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Height="35"
                Margin="33,449,399,216"
                FontFamily="Minecraft"
                FontSize="24"
                Foreground="#dcdcdc"
                Text="Fullscreen" />

            <local:Toggle
                Grid.Column="1"
                Margin="313,452,31,220"
                Cursor="Hand"
                Template="{DynamicResource ToggleTemplate1}" />

            <Button
                x:Name="PlayButton"
                Grid.Row="0"
                Grid.Column="1"
                Width="360"
                Margin="20,560,20,30"
                Background="#ff9a3c"
                Click="OnPlayButton"
                Content="Play"
                Cursor="Hand"
                FontFamily="Minecraft"
                FontSize="60"
                Foreground="#383838"
                Style="{DynamicResource PlayButton}" />

            <Button
                Grid.Row="0"
                Grid.Column="1"
                Height="36"
                Margin="20,501,207,163"
                Background="#595959"
                Cursor="Hand"
                Style="{DynamicResource DefaultButton}">

                <StackPanel
                    Width="170"
                    Height="35"
                    Margin="0,-6,-24,-6"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="6,6,0,5"
                        FontFamily="Minecraft"
                        FontSize="18"
                        Foreground="#dcdcdc"
                        Text="Check Files" />
                    <Image
                        Width="26"
                        Height="26"
                        Margin="10,1,0,0"
                        Source="/WPF/Images/WrenchIcon.png"
                        Stretch="Fill" />

                </StackPanel>
            </Button>

            <Button
                Grid.Row="0"
                Grid.Column="1"
                Height="36"
                Margin="207,501,20,163"
                Background="#595959"
                Cursor="Hand"
                Style="{DynamicResource DefaultButton}">

                <StackPanel
                    Width="170"
                    Height="35"
                    Margin="0,-6,-24,-6"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="6,6,0,5"
                        FontFamily="Minecraft"
                        FontSize="18"
                        Foreground="#dcdcdc"
                        Text="Reload Files" />
                    <Image
                        Width="29"
                        Height="28"
                        Margin="0,1,0,0"
                        Source="/WPF/Images/RecycleIcon.png"
                        Stretch="Fill" />

                </StackPanel>
            </Button>

            <Rectangle
                Grid.Row="0"
                Grid.Column="2"
                Margin="346,9,0,674"
                Fill="#434343" />
            <Rectangle
                Grid.Row="0"
                Grid.Column="2"
                Margin="322,0,14,682"
                Fill="#434343" />

            <Button
                Grid.Row="0"
                Grid.Column="2"
                Width="39"
                Height="26"
                Margin="361,0,0,674"
                Background="#434343"
                Click="ShutDown"
                Cursor="Hand"
                Style="{DynamicResource TitleButton}" />
            <Button
                Grid.Row="0"
                Grid.Column="2"
                Width="39"
                Height="26"
                Margin="322,0,39,674"
                Background="#434343"
                Click="Minimize"
                Cursor="Hand"
                Style="{DynamicResource TitleButton}" />

            <StackPanel
                Grid.Row="0"
                Grid.Column="2"
                Width="39"
                Height="26"
                Margin="361,0,0,674">
                <Rectangle
                    Width="18"
                    Height="2"
                    Margin="0,12,0,0"
                    Fill="#dcdcdc"
                    IsHitTestVisible="False"
                    RadiusX="1"
                    RadiusY="1"
                    RenderTransformOrigin="0.5,0.5">
                    <Rectangle.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform />
                            <SkewTransform />
                            <RotateTransform Angle="45" />
                            <TranslateTransform />
                        </TransformGroup>
                    </Rectangle.RenderTransform>
                </Rectangle>
                <Rectangle
                    Width="18"
                    Height="2"
                    Margin="0,-2,0,0"
                    Fill="#dcdcdc"
                    IsHitTestVisible="False"
                    RadiusX="1"
                    RadiusY="1"
                    RenderTransformOrigin="0.5,0.5">
                    <Rectangle.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform />
                            <SkewTransform />
                            <RotateTransform Angle="-45" />
                            <TranslateTransform />
                        </TransformGroup>
                    </Rectangle.RenderTransform>
                </Rectangle>
            </StackPanel>
            <StackPanel
                Grid.Row="0"
                Grid.Column="2"
                Width="39"
                Height="26"
                Margin="322,0,39,674">
                <Rectangle
                    Width="14"
                    Height="2"
                    Margin="0,12,0,0"
                    Fill="#dcdcdc"
                    IsHitTestVisible="False"
                    RadiusX="1"
                    RadiusY="1" />
            </StackPanel>
        </Grid>
    </Border>
</Window>

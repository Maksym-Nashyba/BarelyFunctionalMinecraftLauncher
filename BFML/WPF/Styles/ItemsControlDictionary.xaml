<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="ProgressTrackerItemStyle" TargetType="TextBlock">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="TextAlignment" Value="Left"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="FontFamily" Value="Minecraft" />
        <Setter Property="Text" Value="{Binding FormattedLabel}"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding State}" Value="Inactive">
                <Setter Property="Foreground" Value="#595959"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding State}" Value="Running">
                <Setter Property="Foreground" Value="#808080"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding State}" Value="Complete">
                <Setter Property="Foreground" Value="#ff9a3c"/>
                <Setter Property="TextBlock.Effect">
                    <Setter.Value>
                        <DropShadowEffect
                            BlurRadius="15"
                            Direction="270"
                            Opacity="1"
                            ShadowDepth="0"
                            Color="#ff9a3c" />
                    </Setter.Value>
                </Setter>
            </DataTrigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="Minecraft">
        <Setter Property="TextElement.FontFamily" Value="/WPF/Fonts/#MinecraftFont" />
    </Style>
    <Style x:Key="GlowText">
        <Setter Property="TextBlock.Effect">
            <Setter.Value>
                <DropShadowEffect
                    BlurRadius="30"
                    Direction="270"
                    Opacity="1"
                    ShadowDepth="0"
                    Color="#ff9a3c" />
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>